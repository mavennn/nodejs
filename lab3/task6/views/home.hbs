<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="index.css">
    <title>Home</title>


</head>
<body>
    <div>
        <p>{{user.login}}</p>
        <p>{{user.age}}</p>
        <p>{{user.hobby}}</p>
    </div>

    <div>
        {{#each games}}
            <div>
                <p>{{this.title}}</p>
                <p>{{this.description}}</p>
                <p>{{this.age}}</p>
            </div>
        {{/each}}
    </div>

    <button id="exit-btn">Выйти</button>

    <script>
        "use strict";

        var exitButton = document.getElementById("exit-btn");

        exitButton.addEventListener("click", () => {

            fetch("http://localhost:3000/api/users/exit", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
            })
            .then(res => {
                if (res.ok) {
                    location.href = "/auth"
                }
            })
            .catch(err => console.log(err));
        });


    </script>
</body>
</html>